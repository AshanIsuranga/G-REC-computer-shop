<%- include('partials/header') %>
<body background="10875867.png" style="background-size: cover;">
<div class="d-flex justify-content-center align-items-center vh-100">
  <div style="opacity: 0.75; background-color: lightgray; padding: 20px; max-width: 1000px; width: 50%; border-radius: 10px;">
      <!-- Makes POST request to /register route -->
      <form action="/register" method="POST">
        <h1 display-3 style="color: black; text-align: center;">Register</h1>
        <div class="form-group">
          <input type="email" class="form-control" name="username" placeholder="Email" onfocus="this.placeholder=''" onblur="this.placeholder='Email'">
        </div>
        <div class="form-group">
          <div class="input-group">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password" onfocus="this.placeholder=''" onblur="this.placeholder='Password'">
            <div class="input-group-append">
              <button class="btn btn-outline-secondary" style="background-color: lightgray; color: black;" type="button" id="togglePassword" onclick="togglePasswordVisibility()">
                  Show
              </button>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-dark w-100">Register</button>
      </form>
  </div>
</div>
</body>
<%- include('partials/footer') %>

<script>
function togglePasswordVisibility() {
    var passwordInput = document.getElementById("password");
    var toggleButton = document.getElementById("togglePassword");

    if (passwordInput.type === "password") {
        passwordInput.type = "text";
        toggleButton.textContent = "Hide";
    } else {
        passwordInput.type = "password";
        toggleButton.textContent = "Show";
    }
}
</script>
